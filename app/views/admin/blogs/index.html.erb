<div class="container">
    <div class="row">
      <div class="col">
        <h1>ブログ一覧</h1>
        <table class="table">
          <thead>
            <th>記事ID</th>
            <th>記事タイトル</th>
            <th>閲覧数</th>
            <th>最終更新日時</th>
            <th>編集ボタン</th>
            <th>消去ボタン</th>
          </thead>
          <tbody>
            <% @blogs.each do |blog| %>
              <tr>
                <td><%= blog.id %></td>
                <td><%= link_to blog.title, blog_path(blog) %></td>
                <td><%= blog.impressionist_count %></td>
                <td><%= blog.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                <td><%= link_to "編集", edit_admin_blog_path(blog), class: "btn btn-success" %></td>
                <td><%= link_to "消去", admin_blog_path(blog), class: "btn btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>