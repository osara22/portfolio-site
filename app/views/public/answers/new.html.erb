<div class="container">
  <div class="row bg-light">
    <div class="col border rounded">
      <h1 class="py-3 border-bottom"><%= @question.title %></h1>
      <%= render 'public/questions/user_data', data: @question %>
      <p><%= simple_format(@question.body) %></p>
      <% if @question.image.present? %>
        <%= attachment_image_tag @question, :image, format: 'jpeg', class:'mb-2', style:'max-width: 100%' %>
      <% end %>
    </div>
  </div>
  <div class="row bg-light mt-3 border rounded">
    <%= form_with model: @answer, url:answers_path, local:true do |f| %>
      <div class="col">
        <h1 class="py-3 border-bottom"><%= f.label :body, "回答の内容（必須）" %></h1>
        <%= f.text_area :body, cols: 100, rows: 20, placeholder: "入力してください" %>
        <div class="row">
          <div class="col">
            <%= f.button '新規登録', type: 'button', onclick: 'submit();', class: "btn btn-success my-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
