<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1>お問い合わせフォーム</h1>
      <%= form_for(@contact, url: contacts_path) do |f| %>
        <table class="table">
          <tbody>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :name, 'お名前' %></td>
              <td><%= f.text_field :name, autofocus: true, class: 'form-control' %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :email, 'メールアドレス' %></td>
              <td><%= f.text_field :email, size: 100, class: 'form-control' %></td>
            </tr>
            <tr class="mb-3">
              <td class="text-center"><%= f.label :message, 'メッセージ' %></td>
              <td><%= f.text_area :message, cols: 100, rows: 20, placeholder: "入力してください", class: 'form-control' %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '送信する', class: "btn btn-success mt-3" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>