<% if blog.favorited_by?(current_user) %>
    <%= link_to blog_blog_favorites_path(blog), class: 'btn btn-secondary mt-3', method: :delete, remote: true do %>
      <i class="fas fa-star"></i><%= blog.blog_favorites.count %>　お気に入り登録済み
    <% end %>
<% else %>
    <%= link_to blog_blog_favorites_path(blog), class: 'btn btn-warning mt-3', method: :post, remote: true do %>
      <i class="far fa-star"></i><%= blog.blog_favorites.count %>　お気に入り登録する
    <% end %>
<% end %>