<div class="container">
  <div class="row">
    <div class="col">
      <h1>UserのQ&A詳細</h1>
      <% if user_signed_in? %>
        <% if @question.user_id == current_user.id %>
          <%= link_to "ベストアンサーを選ぶ", best_select_question_path(@question) , class: 'btn btn-light' %>
        <% end %>
      <% end %>
      <h1><%= @question.title %></h1>
      <h3><%= @question.user.name %></h3>
      <p><%= simple_format(@question.body) %></p>
      <% if @question.image.present? %>
        <%= attachment_image_tag @question, :image, :fill, 400, 400, format: 'jpeg' %>
      <% end %>
    </div>
  </div>
  <% if @question.best_answer_id.present? %>
    <div class="row">
      <div class="col">
        <h1>ベストアンサーに選ばれた回答</h1>
        <div class="row">
          <div class="col-1">
            <%= attachment_image_tag @best_answer.user, :user_image, :fill, 100, 100, format: 'jpeg', fallback:"sample_img.jpg", size: '50x50', class: 'rounded-circle' %>
          </div>
          <div class="col-8 pl-0">
            <div class="post-date-list">
              <ul>
                <li>回答者 : <%= link_to @best_answer.user.name, root_path %> さん</li>
                <li><%= @best_answer.created_at.strftime('%Y/%m/%d %H:%M') %></li>
              </ul>
            </div>
          </div>
        </div>
        <p><%= simple_format(@best_answer.body) %></p>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col">
      <h1>Userの回答</h1>
      <% if user_signed_in? %>
        <% unless @question.user_id == current_user.id %>
          <%= link_to "回答する", new_answer_path(@question) , class: 'btn btn-light' %>
        <% end %>
      <% end %>
      <% @question.answers.each do |answer| %>
        <div class="row">
          <div class="col">
            <h3><%= answer.user.name %></h3>
            <p><%= answer.body %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
