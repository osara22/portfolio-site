<div class="col-3 border-left">
  <div class="row">
    <div class="col">
      <%= link_to questions_path do %>
        <div class="col border border-secondary rounded mb-5">
          <h3>わからない3DCGの疑問を質問して解決！</br>Q&Aサービスへ</h3>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col ">
      <h4 class="border-bottom pb-2 mb-2"><i class="fas fa-tags"></i> タグ一覧</h4>
      <ul class="list-group">
        <% tags.each do |tag| %>
          <%= link_to root_path(:tag => tag.name) do %>
            <li class="list-group-item"><%= tag.name %> (<%= tag.taggings_count %>)</li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>