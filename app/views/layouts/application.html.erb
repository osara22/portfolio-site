<!DOCTYPE html>
<html>
  <head>
    <title>PortfolioSite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% if current_page?(root_path) || request.path.include?("blogs") && !request.path.include?("admin") %>
      <%= render 'layouts/header_blog_slide', slide_blogs: @slide_blogs %>
    <% end %>
    <%= yield %>
  </body>
</html>
