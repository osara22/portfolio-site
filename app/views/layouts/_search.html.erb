<% if request.path.include?("questions") %>
  <div class="search_form m-auto">
    <%= form_with url: search_questions_path, method: :get, local: true do |f| %>
      <%= f.text_field :search_word, placeholder: '質問タイトル検索' %>
      <%= f.submit '検索' %>
    <% end %>
<% else %>
  <div class="search_form m-auto">
    <%= form_with url: root_path, method: :get, local: true do |f| %>
      <%= f.text_field :search_word, placeholder: 'ニュースタイトル検索' %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
<% end %>