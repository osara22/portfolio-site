<header>
  <div class="container-fluid">
    <div class="row bg-success">
      <div style="height: 300px">
      </div>
    </div>
    <div class="row bg-warning">
      <div style="height: 50px">
        <% if user_signed_in? || admin_signed_in? %>
          <%= link_to " 会員ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-light' %>
          <%= link_to " 管理者ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-light' %>
        <% else %>
          <%= link_to " 会員新規登録", new_user_registration_path, class: 'btn btn-light' %>
          <%= link_to " 会員ログイン", new_user_session_path, class: 'btn btn-light' %>
          <%= link_to " 管理者ログイン", new_admin_session_path, class: 'btn btn-light' %>
        <% end %>
      </div>
    </div>
  </div>
</header>