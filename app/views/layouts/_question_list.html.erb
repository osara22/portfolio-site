<% questions.each do |question| %>
  <div class="row">
    <div class="col">
      <%= link_to question.title, question_path(question), class: 'h4 question-title' %>
      <p class="text-secondary mb-1">質問日時：<%= question.created_at.strftime('%Y/%m/%d %H:%M') %></p>
      <p class="border-bottom pb-2"><%= question.body.truncate(50) %></p>
    </div>
  </div>
<% end %>